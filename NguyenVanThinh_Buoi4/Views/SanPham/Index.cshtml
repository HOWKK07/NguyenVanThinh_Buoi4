@model IEnumerable<NguyenVanThinh_Buoi4.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm bán";
    int numOfQuantity = 1;
}

<section id="sanpham" class="container my-5">
    <h2 class="mb-4">Danh sách sản phẩm</h2>
    <!-- Hiển thị sản phẩm ở đây -->
</section>

<section class="py-2">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card product-card h-100 shadow-sm border-0">
                        <img src="@item.ImageUrl" class="card-img-top product-img" alt="..." />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold text-center mb-2">
                                @Html.DisplayFor(modelItem => item.Name)
                            </h5>
                            <div class="d-flex justify-content-center align-items-center mb-3">
                                <span class="fw-semibold text-secondary">Giá:</span>
                                <span class="ms-2 fs-5 text-danger">@item.Price.ToString("#,##0") Vnđ</span>
                            </div>
                            <div class="mt-auto text-center">
                                <a asp-controller="SanPham" asp-action="Display" asp-route-id="@item.Id" class="btn btn-primary mb-2">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>
                                <a asp-controller="ShoppingCart" asp-action="AddToCart"
                                   asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                                    <button class="btn btn-outline-dark add-cart-btn">
                                        <i class="bi-cart-fill me-1"></i> Thêm vào giỏ
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NguyenVanThinh_3107</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NguyenVanThinh_3107.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.7rem;
            letter-spacing: 1px;
            color: #198754 !important;
        }

        .navbar-nav .nav-link.active, .navbar-nav .nav-link:hover {
            color: #198754 !important;
            font-weight: 600;
        }

        .search-box {
            min-width: 250px;
            border-radius: 20px;
            box-shadow: 0 1px 4px #eee;
        }

        .cart-btn {
            border-radius: 20px;
            font-weight: 500;
        }

        .admin-dropdown .dropdown-toggle {
            background: #198754;
            color: #fff !important;
            border-radius: 20px;
            padding: 0.4rem 1.2rem;
            font-weight: 500;
            transition: background 0.2s;
        }

            .admin-dropdown .dropdown-toggle:hover, .admin-dropdown .dropdown-toggle:focus {
                background: #145c32;
                color: #fff !important;
            }

        .admin-dropdown .dropdown-menu {
            border-radius: 15px;
            min-width: 220px;
            box-shadow: 0 2px 12px #ccc;
        }

        .admin-dropdown .dropdown-item {
            font-weight: 500;
            color: #198754;
            transition: background 0.2s, color 0.2s;
        }

            .admin-dropdown .dropdown-item:hover {
                background: #e9f7ef;
                color: #145c32;
            }

        footer {
            background: #f8f9fa;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/favicon.ico" alt="Logo" width="36" height="36" class="me-2" />
                    NguyenVanThinh_3107
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Trang chủ
                            </a>
                        </li>
                        @await Component.InvokeAsync("CategoryDropdown")
                        
                        <li class="nav-item dropdown admin-dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-shield-lock"></i> Quản trị
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Quản lý sản phẩm
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                        <i class="bi bi-tags"></i> Quản lý danh mục
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                        <i class="bi bi-card-checklist"></i> Quản lý đơn hàng
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex me-3" asp-area="" asp-controller="SanPham" asp-action="Index" method="get">
                        <input class="form-control me-2 search-box" type="search" name="search" placeholder="Tìm sản phẩm..." aria-label="Search" />
                        <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                        <a asp-area="" asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-success cart-btn d-flex align-items-center ms-3">
                            <i class="bi bi-cart-fill me-1"></i> Giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted py-3 mt-4">
        <div class="container d-flex justify-content-between align-items-center">
            <span>
                &copy; 2025 - NguyenVanThinh_3107. All rights reserved.
            </span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-secondary">
                <i class="bi bi-shield-lock"></i> Privacy
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
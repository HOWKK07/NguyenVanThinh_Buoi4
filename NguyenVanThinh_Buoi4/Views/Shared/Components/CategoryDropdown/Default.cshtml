@model IEnumerable<NguyenVanThinh_Buoi4.Models.Category>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-grid-3x3-gap"></i> Danh mục
    </a>
    <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
        <li>
            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-list-ul"></i> Tất cả sản phẩm
            </a>
        </li>
        <li><hr class="dropdown-divider"></li>
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="ByCategory" asp-route-categoryId="@category.Id">
                    <i class="bi bi-tag"></i> @category.Name
                </a>
            </li>
        }
    </ul>
</li>
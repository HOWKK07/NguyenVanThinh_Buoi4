@model NguyenVanThinh_Buoi4.Models.Category
@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-info text-white">
        <h3 class="mb-0">Chi tiết danh mục</h3>
    </div>
    <div class="card-body bg-light">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Tên danh mục</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary rounded-pill shadow-sm">Quay lại danh sách</a>
    </div>
</div>

@model IEnumerable<NguyenVanThinh_Buoi4.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-10">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Danh sách sản phẩm (Admin)</h3>
                <a href="@Url.Action("Add", "Product", new { area = "Admin" })" class="btn btn-success rounded-pill px-4 shadow-sm">Thêm mới</a>
            </div>
            <div class="card-body bg-light">
                <div class="mb-3">
                    <input type="text" class="form-control rounded-pill shadow-sm" placeholder="Tìm kiếm sản phẩm..." autocomplete="off" />
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered rounded shadow-sm bg-white align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th style="width:18%">Tên sản phẩm</th>
                                <th style="width:12%">Giá</th>
                                <th style="width:20%">Danh mục</th>
                                <th style="width:25%">Mô tả</th>
                                <th style="width:10%">Ảnh</th>
                                <th style="width:15%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@product.Price.ToString("N0")</td>
                                    <td>@product.Category?.Name</td>
                                    <td>@product.Description</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="Product Image" style="max-width:40px; border-radius:8px; box-shadow:0 2px 8px #ccc;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có ảnh</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Display", "Product", new { area = "Admin", id = product.Id })"
                                           class="btn btn-info btn-sm rounded-pill shadow-sm me-1"
                                           title="Xem chi tiết">
                                            <i class="bi bi-eye"></i> Xem
                                        </a>
                                        <a href="@Url.Action("Update", "Product", new { area = "Admin", id = product.Id })"
                                           class="btn btn-warning btn-sm rounded-pill shadow-sm me-1"
                                           title="Sửa sản phẩm">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <a href="@Url.Action("Delete", "Product", new { area = "Admin", id = product.Id })"
                                           class="btn btn-danger btn-sm rounded-pill shadow-sm"
                                           title="Xóa sản phẩm">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


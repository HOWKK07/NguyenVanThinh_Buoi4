@model NguyenVanThinh_Buoi4.Models.Product

<div class="row justify-content-center mt-5">
    <div class="col-md-7">
        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Chi tiết sản phẩm</h4>
            </div>
            <div class="card-body bg-light">
                <dl class="row">
                    <dt class="col-sm-4">Tên sản phẩm</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("N0")</dd>

                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Ảnh đại diện</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="Product Image" style="max-width:80px; border-radius:8px; box-shadow:0 2px 8px #ccc;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </dd>
                </dl>
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>